extend ../base.pug 

block variables 
  - var template = 'home'

block content 
  .home 
  .home__wrapper
    .home__titles 
    each collection, index in collections 
      .home__title__label=`${home.data.collection} ${index == 0 ? 'One' : index == 1 ? 'Two' : index == 2 ? 'Three' : 'Four' }`
      .home__tiltes__title=collection.data.title

    .home__gallery
    each media in home.data.gallery 
      figure.home__gallery__media 
        img.home__gallery__image(alt=media.image.alt src=media.image.url)

    a.home__link(href=Link(home.data.collections))=home.data.button